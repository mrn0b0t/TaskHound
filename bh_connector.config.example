# BloodHound Connector Configuration
# Place this file in one of these locations:
#   - Current directory: ./bh_connector.config
#   - User config: ~/.taskhound/bh_connector.config  
#   - Home directory: ~/bh_connector.config

[BloodHound]
# BloodHound connection settings (separate from domain credentials)
ip = 127.0.0.1
username = neo4j
password = your_bloodhound_password_here

# BloodHound type: 'bhce' for Community Edition, 'legacy' for Legacy BloodHound
type = legacy

# Optional: save BloodHound query results to file
save_file = bloodhound_debug_export.json

# Environment variable support:
# password = ${BH_PASSWORD}
# username = ${BH_USER}